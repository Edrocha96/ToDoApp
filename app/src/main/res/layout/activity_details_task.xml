<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".DetailsTaskActivity">

    <TextView
        android:id="@+id/textViewDatailsTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/cooperblackregular"
        android:text="Detalhes da Tarefa"
        android:textAlignment="center"
        android:textColor="#151515"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonEditTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#F7F3F3"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout1Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDatailsTask"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1Details"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/activity_text_white_backgroud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDatailsTask">

        <EditText
            android:id="@+id/inputTextNameTaskDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="Nome da tarefa"
            android:inputType="textPersonName"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2Details"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/activity_text_white_backgroud"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout1Details"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout1Details"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1Details">

        <TextView
            android:id="@+id/textViewDateTaskDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="Data Tarefa"
            android:enabled="false"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3Details"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/activity_text_white_backgroud"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2Details"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout2Details"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2Details">

        <EditText
            android:id="@+id/inputTextTaskDescriptionDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="Descrição Tarefa"
            android:inputType="textPersonName"
            android:textAlignment="viewStart"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnSaveEdit"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="96dp"
        android:text="Salvar"
        android:enabled="false"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="96dp"
        android:text="Excluir"
        android:enabled="false"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>